@model PizzeriaApp.ViewModels.ViewProduct

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<h1>Izveidošana</h1>

<h4>Produkts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nosaukums</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Apraksts</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedImage" class="control-label">Bilde</label>
                <input asp-for="UploadedImage" type="file" class="form-control" />
                <span asp-validation-for="UploadedImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Kategorija</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option></option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="BadgeId" class="control-label">Žetons</label>
                <select asp-for="BadgeId" class="form-control" asp-items="ViewBag.BadgeId">
                    <option></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Multiplier" class="control-label">Atlaides koeficents</label>
                <input asp-for="Multiplier" class="form-control" />
                <span asp-validation-for="Multiplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izveidot" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
