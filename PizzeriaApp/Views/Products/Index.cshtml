@model IEnumerable<PizzeriaApp.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

@section Scripts{

<script type="text/javascript">
    $(document).ready(function () {
        $('#Products').DataTable();
    });
</script>
}


<p>
        <a asp-action="Create">Izveidot jaunu produktu</a>
</p>
<table class="table" id="Products">
    <thead>
        <tr>
            <th>
                Nosaukums
            </th>
            <th>
                Apraksts
            </th>
            <th>
                Cena
            </th>
            <th>
                Bilde
            </th>
            <th>
                Kategorija
            </th>
            <th>
                Žetons
            </th>
            <th>
                Atladies koeficents
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img class="img-fluid" style="width:125px; height:100px; object-fit:cover" src="data:image/jpeg;base64,@Convert.ToBase64String(@item.Image)">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Badge.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Multiplier)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Rediģēt</a> |
                
                </td>
            </tr>
        }
    </tbody>
</table>
