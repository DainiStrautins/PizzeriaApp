@model PizzeriaApp.Models.OrderDetails

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<h1>Papildus informācija</h1>

<div>
<h4>Pasūtījuma deteļas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Produkts
        </dt>
        <dd class = "col-sm-10">
            <p> @Model.Products.Name </p>
            <img class="img-fluid" style="width:125px; height:100px; object-fit:cover" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Products.Image)">
        </dd>
        <dt class = "col-sm-2">
            Izmērs
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size.Name)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Skaits
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            Veido pats
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recipe)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Rediģēt</a> |
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>
