@model PizzeriaApp.Models.UserOrders

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<h1>Papildus informācija</h1>

<div>
    <h4>Lietotāju pasūtījums</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Lietotājs
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            Pasūtījuma detaļas
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Details" asp-controller="OrderDetails" asp-route-id="@Model.OrderDetails.Id">@Html.DisplayFor(model => model.OrderDetails.Id)</a>
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class = "col-sm-2">
            Izveodšanas laiks
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Pamatpasūtījums
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentOrder.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Rediģēt</a> |
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>
