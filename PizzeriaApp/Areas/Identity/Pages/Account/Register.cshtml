@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem; border-color: #9A616D;">
                    <div class="col-md-11 col-lg-12 d-flex align-items-center mx-auto">
                        <div class="card-body p-4 p-lg-5 text-black">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0 ml-2">Picērija</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Reģistrē savu kontu</h5>
                                <hr />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-outline mb-4">
                                            <input asp-for="Input.Name" class="form-control" aria-required="true" />
                                            <label asp-for="Input.Name">Vārds</label>
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-outline mb-4">
                                            <input asp-for="Input.Lastname" class="form-control" aria-required="true" />
                                            <label asp-for="Input.Lastname">Uzvārds</label>
                                            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label">E-pasts</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.Password">Parole</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword">Parole atkārtoti</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="pt-1 mb-4">
                                    <button id="registerSubmit" type="submit" class="btn btn-dark btn-lg btn-block">Reģistrēties</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
